@model ExportTemplateViewModel 
<style asp-name="codemirror"></style>
<script asp-name="codemirror" depends-on="admin" at="Foot"></script>
<script asp-name="codemirror-mode-javascript" at="Foot"></script>
<script asp-name="codemirror-addon-display-autorefresh" at="Foot"></script>
<script asp-name="codemirror-addon-mode-simple" at="Foot"></script>
<script asp-name="codemirror-addon-mode-multiplex" at="Foot"></script>
<script asp-name="codemirror-mode-xml" at="Foot"></script>

<script asp-src="~/OrchardCore.Liquid/codemirror/liquid.js" at="Foot"></script>

<form method=post>
<div class="form-group">
    <div>
        <label asp-for="Template">@T["模版"]</label>
        <textarea asp-for="Template" rows="5" class="form-control"></textarea>
        <span class="hint">参数:  Model.Lines</span>
    </div>
</div>
    <button type="submit" class="btn btn-primary">保存</button>
</form>

<script at="Foot" depends-on="jquery">
//<![CDATA[
$(function () {
    editor = CodeMirror.fromTextArea(document.getElementById('@Html.IdFor(x => x.Template)'), {
        autoRefresh: true,
        lineNumbers: true,
        styleActiveLine: true,
        matchBrackets: true,
        mode: { name: "liquid" },
    });
});
//]]>
</script>
