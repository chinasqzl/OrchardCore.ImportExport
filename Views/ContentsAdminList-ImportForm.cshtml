<div class="modal fade" id="Import">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">从Excel导入</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="height:150px">
                <form enctype="multipart/form-data" asp-all-route-data="@Model.Route">
                    <input type="hidden" name="returnUrl" value="@FullRequestPath" />
                    <nav class="admin-toolbar">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="@Url.Action("Export","Admin",new { area = "OrchardCore.ImportExport", ContentTypeId=Model.ContentTypeId,blank=true })">1.下载导入模版</a><br />
                                <span>2.<input style="margin-top:10px;" type="file" name="importedFile" /></span><br />
                                <button class="btn btn-primary" style="margin-top:10px;" type="submit">@T["导入"]</button>
                            </li>
                        </ul>
                    </nav>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>

@*asp-action="Import" asp-route-area="OrchardCore.ImportExport" asp-controller="Admin" asp-route-contentType="@Model.ContentType"*@